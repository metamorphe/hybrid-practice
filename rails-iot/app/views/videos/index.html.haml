%h1 Listing videos

%table.table.table-striped
  %thead
    %tr
      %th File
      %th User
      %th Pad
      %th Slot
      %th
      %th
      %th

  %tbody
    - @videos.each do |video|
      %tr
        %td= video.file
        %td= video.user_id
        %td= video.pad
        %td= video.slot
        %td= link_to 'Show', video, :class => "btn btn-sm btn-primary"
        %td= link_to 'Edit', edit_video_path(video), :class => "btn btn-sm btn-primary"
        %td= link_to 'Destroy', video, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-sm btn-primary"

%br

= link_to 'New Video', new_video_path
