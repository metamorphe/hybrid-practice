.panel.panel-default
  .panel-body
    = form_for @design, :html => {:multipart => true} do |f|
      - if @design.errors.any?
        #error_explanation
          %h2
            = pluralize(@design.errors.count, "error")
            prohibited this design from being saved:
          %ul
            - @design.errors.full_messages.each do |message|
              %li= message
      .field.form-group
        = f.label :name
        %br/
        = f.text_field :name, :class => "form-control"
      .field.form-group
        = f.label :json
        %br/
        = f.file_field :json, :class => "form-control"
      .actions
        = f.submit
